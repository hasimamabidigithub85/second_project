<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#81E6C262"
    android:gravity="center"
    tools:context="com.gropse.epub.Activity.Splash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="match_parent"
                android:text="Welcome to Epothi"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="25dp"
                android:paddingTop="60dp"
                android:textStyle="bold"
                android:layout_weight=".5"
                android:fontFamily="@font/montserrat_extra_light"
                android:layout_height="0dp">
            </TextView>

            <ImageView
                android:id="@+id/splash_icon"
                android:layout_width="match_parent"
                android:paddingTop="177dp"
                android:layout_weight="1.2"
                android:layout_height="0dp"
                android:src="@drawable/scert_logo"></ImageView>

        <TextView
            android:id="@+id/splash_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="1.2"
            android:fontFamily="@font/montserrat_extra_bold"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Scert"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="28sp"></TextView>
    </LinearLayout>
</LinearLayout>