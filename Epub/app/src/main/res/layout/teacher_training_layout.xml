<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="7dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:backgroundTint="#22B49B7B"
        android:orientation="horizontal"
        android:background="@drawable/shape">

        <TextView
            android:id="@+id/title_name_teacher"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="Accessiblble EPUB 3"
            android:textColor="@color/black"
            android:textStyle="normal">

        </TextView>

        <ImageView
            android:id="@+id/download_img_teacher"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_downward_black_24dp"
            android:tint="@color/Dark_yellow"></ImageView>

        <ImageView
            android:id="@+id/view_img_teacher"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/eye"
            android:tint="@color/Dark_yellow"></ImageView>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_dd_teacher"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/white"
        >
        <ProgressBar
            android:id="@+id/progressBar_teacher_tr"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:progressTint="@color/Dark_yellow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewProgressOne_teacher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="2.5"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonCancelOne_teacher"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="10sp"
                android:background="@drawable/shape"
                android:backgroundTint="@color/light_yellow"
                android:enabled="false"
                android:text="Cancel" />
            <View
                android:layout_width="0dp"
                android:layout_weight=".04"
                android:layout_height="match_parent">

            </View>

            <Button
                android:id="@+id/buttonOne_teacher"
                android:layout_width="0dp"
                android:textSize="10sp"
                android:background="@drawable/shape"
                android:textColor="#000"
                android:layout_height="24dp"
                android:backgroundTint="@color/light_yellow"
                android:layout_weight="1"
                android:text="Start" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>